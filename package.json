{
  "name": "telegram-search",
  "type": "module",
  "version": "1.1.45",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=24.12.0"
  },
  "scripts": {
    "apply:env": "dotenvx run -f .env -f .env.local --overload --ignore=MISSING_ENV_FILE",
    "start": "concurrently \"pnpm run server:dev\" \"pnpm run web:preview --host 0.0.0.0\"",
    "server:dev": "pnpm apply:env -- pnpm -F @tg-search/server dev",
    "server:inspect": "pnpm apply:env -- pnpm -F @tg-search/server inspect",
    "server:build": "pnpm apply:env -- pnpm -F @tg-search/server build",
    "server:run": "pnpm apply:env -- pnpm -F @tg-search/server start",
    "web:dev": "pnpm -F @tg-search/web dev",
    "web:build": "pnpm -F @tg-search/web build",
    "web:preview": "pnpm -F @tg-search/web preview",
    "dev": "VITE_WITH_CORE=true pnpm -F @tg-search/web dev",
    "build": "VITE_WITH_CORE=true pnpm -F @tg-search/web build",
    "preview": "pnpm run build && pnpm -F @tg-search/web preview",
    "build:packages": "pnpm -rF=\"./packages/*\" --parallel build",
    "dev:server": "pnpm run server:dev",
    "dev:frontend": "pnpm run web:dev",
    "inspect:server": "pnpm run server:inspect",
    "packages:build": "pnpm run build:packages",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "typecheck": "pnpm run build:packages && pnpm -r --parallel typecheck",
    "bump": "bumpp",
    "bump:deps": "taze -I -f -w -r",
    "db:generate": "pnpm apply:env -- drizzle-kit generate",
    "db:kit": "pnpm apply:env -- drizzle-kit",
    "postinstall": "pnpm run packages:build"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.4",
    "@guiiai/logg": "catalog:"
  },
  "devDependencies": {
    "@moeru/eslint-config": "0.1.0-beta.14",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "4.0.16",
    "bumpp": "^10.3.2",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "taze": "^19.9.2",
    "tsdown": "catalog:",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.3.0",
    "vitest": "^4.0.16"
  }
}
